<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.widyatama.android_implement_workmanager.presentation.activity.PeriodicTimeActivity">

    <ImageView
            android:layout_height="290dp" app:srcCompat="@mipmap/ic_launcher_round"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:id="@+id/imageResult"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="84dp" android:visibility="visible"
            android:layout_width="286dp" android:scaleType="fitXY"/>
    <Button
            android:text="download image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/btnPeriodicTime" style="@style/Widget.AppCompat.Button"
            app:layout_constraintHorizontal_bias="0.502"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="15dp"/>
    <ProgressBar
            style="?android:attr/progressBarStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:id="@+id/progressBar" android:layout_marginTop="29dp"
            app:layout_constraintTop_toBottomOf="@+id/imageResult" android:visibility="gone"/>
</android.support.constraint.ConstraintLayout>
